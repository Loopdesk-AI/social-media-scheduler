# =============================================================================
# Production Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your production values
# NEVER commit the actual .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=3001

# URLs (update with your actual domain)
FRONTEND_URL=https://your-frontend-domain.com
BACKEND_URL=https://your-backend-domain.com

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Cloud PostgreSQL connection string (Neon, AWS RDS, etc.)
# Format: postgresql://user:password@host:5432/database?sslmode=require
DATABASE_URL=postgresql://user:password@your-db-host.com:5432/social_media_scheduler

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# For AWS ElastiCache (same VPC as EC2):
REDIS_HOST=your-elasticache-endpoint.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=true
REDIS_CLUSTER_MODE=false

# For ElastiCache Cluster Mode:
# REDIS_CLUSTER_MODE=true

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# 64-character hex encryption key for storing OAuth tokens securely
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-encryption-key-generate-a-new-one

# -----------------------------------------------------------------------------
# OAuth - Instagram/Facebook
# -----------------------------------------------------------------------------
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# -----------------------------------------------------------------------------
# OAuth - YouTube
# -----------------------------------------------------------------------------
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# OAuth - LinkedIn
# -----------------------------------------------------------------------------
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# OAuth - Twitter/X
# -----------------------------------------------------------------------------
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# OAuth - TikTok
# -----------------------------------------------------------------------------
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Cloud Storage - Google Drive
# -----------------------------------------------------------------------------
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REDIRECT_URI=https://your-backend-domain.com/api/storage/callback/google-drive

# -----------------------------------------------------------------------------
# Cloud Storage - Dropbox
# -----------------------------------------------------------------------------
DROPBOX_CLIENT_ID=
DROPBOX_CLIENT_SECRET=
DROPBOX_REDIRECT_URI=https://your-backend-domain.com/api/storage/callback/dropbox

# -----------------------------------------------------------------------------
# Media Storage - Cloudflare R2 (Required)
# -----------------------------------------------------------------------------
CLOUDFLARE_R2_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_R2_ACCESS_KEY=your-r2-access-key
CLOUDFLARE_R2_SECRET_KEY=your-r2-secret-key
CLOUDFLARE_R2_BUCKET=your-bucket-name
CLOUDFLARE_R2_PUBLIC_URL=https://your-r2-public-domain.com

# -----------------------------------------------------------------------------
# AI Features (Optional)
# -----------------------------------------------------------------------------
# Google Gemini API key for AI chat features
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# Admin Features
# -----------------------------------------------------------------------------
# Enable BullMQ dashboard in production (default: false for security)
ENABLE_BULL_BOARD=false
