{
  "name": "social-media-backend",
  "version": "1.0.0",
  "description": "Social media integration backend with Express and BullMQ",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "ts-node src/database/seed.ts",
    "health": "curl -s http://localhost:${PORT:-3000}/health | node -e \"process.stdin.on('data',d=>console.log(JSON.parse(d).status==='healthy'?'✓ Healthy':'✗ Unhealthy'))\"",
    "docker:build": "docker build -t social-media-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env social-media-backend",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop social-media-backend",
    "pm2:restart": "pm2 reload ecosystem.config.js --env production",
    "pm2:logs": "pm2 logs social-media-backend"
  },
  "keywords": [
    "social-media",
    "instagram",
    "youtube",
    "scheduler"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.940.0",
    "@bull-board/api": "^6.14.2",
    "@bull-board/express": "^6.14.2",
    "axios": "^1.13.2",
    "bullmq": "^5.12.12",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.0",
    "dropbox": "^10.34.0",
    "express": "^4.18.2",
    "googleapis": "^137.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.13.0",
    "sharp": "^0.33.4",
    "twitter-api-v2": "^1.15.2",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.30.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
